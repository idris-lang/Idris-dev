%% -------------------------------------------------- [ Default Listings Style ]
%% Provide a default styling for Idris listings. Use is optional. Side effect literate programming is used everywhere.
\newcommand{\IdrisListingsDefaultStyle}
{%
  \lstset{%
    language=idris,
    xleftmargin=\parindent,
    tabsize=2
  }
}

%% ------------------------------------------------------ [ A Code Environment ]
%% Replicate the existence of literate haskell code environments, but
%% make them pretty when compiled to pdf.
\lstnewenvironment{code}[1][]
    {\ifthenelse{\boolean{fncycode}}{%
        \lstset{%
          language=idris,
          tabsize=2,
          xleftmargin=\parindent,
          numbers=left,
          numbersep=10pt,
          numberstyle=\footnotesize\sffamily,
          frame=leftline,#1
        }}{%
        \lstset{%
          language=idris,
          tabsize=2,
          xleftmargin=\parindent,#1
        }}
    }
    {}
\endinput
